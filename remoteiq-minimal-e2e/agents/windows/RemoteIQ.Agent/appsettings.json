{
  "RemoteIQ": {
    "ApiBaseUrl": "https://your-remoteiq-backend.example.com",
    "AgentGroup": "default",
    "PollIntervals": {
      "HeartbeatSeconds": 30,
      "TaskPollSeconds": 5,
      "InventoryMinutes": 30,
      "UpdateCheckMinutes": 30
    },
    "Security": {
      "RequireSignedTasks": true,
      "RsaPublicKeyPem": "-----BEGIN PUBLIC KEY-----\nREPLACE_WITH_YOUR_RSA_2048+_PEM\n-----END PUBLIC KEY-----\n",
      "EnableCertPinning": false,
      "PinnedSpkiSha256": [
        "sha256/REPLACE_BASE64_SPKI_HASH"
      ]
    }
  }
}
